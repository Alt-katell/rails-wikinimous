<div class="container">
  <button class="btn btn-primary"><%= link_to "Add a new article", new_article_path, :style =>"color: white;" %></button>

  <br>
  <br>

  <% @articles.each do |article| %>
    <div>
      <h2><%= link_to article.title, article_path(article.id) %></h2>
      <p><%= article.content %></p>
    </div>
    <br>
  <% end %>
</div>
